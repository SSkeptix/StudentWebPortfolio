@page
@model StudentWebPortfolio.Web.Areas.Identity.Pages.Account.Manage.PortfolioModel
@{
    ViewData["Title"] = "Portfolio";
    ViewData["ActivePage"] = ManageNavPages.Portfolio;
}

<h4>@ViewData["Title"]</h4>
<partial name="_MessageBox" for="MessageBox" />
<div class="row">
    <div class="col-12">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Group"></label>
                <input asp-for="Input.Group" class="form-control" />
                <span asp-validation-for="Input.Group" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.English"></label>
                <select asp-for="Input.English" asp-items="Html.GetEnumSelectList<English>()" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Input.GitHubUrl"></label>
                <input asp-for="Input.GitHubUrl" class="form-control" />
                <span asp-validation-for="Input.GitHubUrl" class="text-danger"></span>            
            </div>
            <div class="form-group">
                <label asp-for="Input.Description"></label>
                <textarea asp-for="Input.Description" class="form-control" style="height:150px;"></textarea>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

